
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="shop-section mt-5">
    <div class="container">
        <div class="row flex-column-reverse flex-lg-row">
            <div class="col-lg-12">
                <!-- Start Shop Product Sorting Section -->
                <div class="shop-sort-section">
                    <div class="container">
                        <div class="row">
                            <div class="col-3"></div>
                            <div class="col-6">
                                <form action="/Home/TimKiem" method="post">
                                    <div class="form-fild-newsletter-single-item input-color--golden">
                                        <input type="text" placeholder="Nhập sản phẩm cần tìm ..." name="searchString" style="color : black !important" required>
                                        <button type="submit">Tìm kiếm</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-3"></div>

                        </div>
                    </div>
                </div> <!-- End Section Content -->
                <!-- Start Tab Wrapper -->
                <div class="sort-product-tab-wrapper">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="tab-content">
                                    <!-- Start Grid View Product -->
                                    <div class="tab-pane active show sort-layout-single" id="layout-4-grid">
                                        <div class="row">
                                            @foreach (var item in Model)
                                            {
                                                <div class="col-xl-3 col-lg-4 col-sm-6 col-12">
                                                    <!-- Start Product Default Single Item -->
                                                    <div class="product-default-single-item product-color--golden" data-aos="fade-up" data-aos-delay="0">
                                                        <div class="image-box">
                                                            <a href="@Url.Action("XemChiTietSP", new {id=item.MaSanPham })" class="image-link">
                                                                <img src=@item.HinhAnh alt="" style="height : 320px !important">
                                                            </a>
                                                            <div class="action-link">
                                                                <div class="action-link-left">
                                                                    <a href="@Url.Action("XemChiTietSP", new {id=item.MaSanPham })">Xem chi tiết</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="content">
                                                            <div class="content-left">
                                                                <h6 class="title"><a href="@Url.Action("XemChiTietSP", new {id=item.MaSanPham })">@item.TenSanPham</a></h6>

                                                            </div>
                                                            <div class="content-right">

                                                            </div>

                                                        </div>
                                                    </div>
                                                    <!-- End Product Default Single Item -->
                                                </div>
                                            }
                                            </div>
                                    </div> <!-- End Grid View Product -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- End Tab Wrapper -->
            </div> <!-- End Shop Product Sorting Section  -->
        </div>
    </div>
</div> <!-- ...:::: End Shop Section:::... -->
