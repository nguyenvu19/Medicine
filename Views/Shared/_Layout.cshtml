<!DOCTYPE html>
<html lang="zxx">

<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title - Blockchain</title>
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico" type="image/png">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/ionicons.css">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/simple-line-icons.css">
    <link rel="stylesheet" href="~/Content/assets/css/vendor/jquery-ui.min.css">

    <!-- Plugin CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/plugins/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/animate.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/nice-select.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/venobox.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/jquery.lineProgressbar.css">
    <link rel="stylesheet" href="~/Content/assets/css/plugins/aos.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">
</head>
<body>
    <!-- Start Header Area -->
    <header class="header-section d-none d-xl-block">
        <div class="header-wrapper">
            <div class="header-bottom header-bottom-color--black section-fluid sticky-header sticky-color--black">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex align-items-center justify-content-between">
                            <!-- Start Header Logo -->
                            <div class="header-logo">
                                <div class="logo">
                                    <a href="@Url.Action("Index", "Home")"><img src="https://duythanhcse.files.wordpress.com/2018/03/blockchain-logo-blue61.png" alt=""></a>
                                </div>
                            </div>
                            <!-- End Header Logo -->
                            <!-- Start Header Main Menu -->
                            <div class="main-menu menu-color--white menu-hover-color--pink">
                                <nav>
                                    <ul>
                                        <li class="has-dropdown">
                                            <a class="active main-menu-link" href="@Url.Action("Index", "Home")">Home</a>
                                            <!-- Sub Menu -->
                                        </li>

                                        <li>
                                            <a href="@Url.Action("TimKiem", "Home")">Tìm kiếm sản phẩm</a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Dangnhap", "Admin/HomeAdmin")">Trang quản lý</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                            <!-- End Header Main Menu Start -->
                            <!-- Start Header Action Link -->
                            <!-- End Header Action Link -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="offcanvas-overlay"></div>

    @RenderBody()

    <div class="footer-bottom footer-bg mt-5">

    </div>
    <!-- Start Footer Bottom -->
    <!-- End Footer Section -->
    <!-- material-scrolltop button -->
    <button class="material-scrolltop" type="button"></button>





    <!-- ::::::::::::::All JS Files here :::::::::::::: -->
    <!-- Global Vendor, plugins JS -->
    <script src="~/Content/assets/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="~/Content/assets/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="~/Content/assets/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/Content/assets/js/vendor/popper.min.js"></script>
    <script src="~/Content/assets/js/vendor/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/vendor/jquery-ui.min.js"></script>

    <!--Plugins JS-->
    <script src="~/Content/assets/js/plugins/swiper-bundle.min.js"></script>
    <script src="~/Content/assets/js/plugins/material-scrolltop.js"></script>
    <script src="~/Content/assets/js/plugins/jquery.nice-select.min.js"></script>
    <script src="~/Content/assets/js/plugins/jquery.zoom.min.js"></script>
    <script src="~/Content/assets/js/plugins/venobox.min.js"></script>
    <script src="~/Content/assets/js/plugins/jquery.waypoints.js"></script>
    <script src="~/Content/assets/js/plugins/jquery.lineProgressbar.js"></script>
    <script src="~/Content/assets/js/plugins/aos.min.js"></script>
    <script src="~/Content/assets/js/plugins/jquery.instagramFeed.js"></script>
    <script src="~/Content/assets/js/plugins/ajax-mail.js"></script>

    <script src="~/Content/assets/js/main.js"></script>
</body>
</html>
