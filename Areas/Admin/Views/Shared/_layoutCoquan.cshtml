<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Quản trị</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/Content/layoutAdmin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
            crossorigin="anonymous"></script>
    <script src="~/Content/layoutAdmin/ckeditor/ckeditor.js"></script>
</head>
@{
    var userAdmin = Session["userAdmin"] as Blockchain_Thuoc.Models.NguoiDung;

}
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-primary">
        <!-- Navbar Brand-->
        <a style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-weight:bold;font-size:26px
" class="navbar-brand ps-3" href="@Url.Action("Index", "KiemDinhs")">QUẢN LÝ</a>
        @{ DateTime aDateTime = DateTime.Now; }

        <!-- Sidebar Toggle-->
        <button style="color:white" class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <p style="color:white;margin-top:15px"><span style="font-weight:bold">Bây giờ là </span> @DateTime.Now.ToString(@"hh\:mm tt") <span style="font-weight:bold">, Ngày </span><span> @String.Format("{0:dd-MM-yyyy}", DateTime.Now)</span></p>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </form>
        @*    @{ var userInfomatiom = (ManageSchedule.Models.User)Session["USER"]; }*@
        <!-- Navbar-->
        <ul style="color:white" class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">

            <li class="nav-item dropdown">

                <a style="color:white" class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                   aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                    @{if (userAdmin != null)
                        {
                            <span>Xin chào: @userAdmin.TaiKhoan</span>
                        }
                    }
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

                    <li> <a class=" dropdown-item" href="@Url.Action("Dangxuat", "HomeAdmin")"> Đăng xuất</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav style="background-color: #F1F1F1 !important" class="sb-sidenav accordion " id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading"> <div class="sb-nav-link-icon"></div>Quản lý chức năng</div>
                        <a class="nav-link" href="@Url.Action("Quytrinhchuaxacthuc", "KiemDinhs")"> <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>Quy trình chưa ký</a>
                        <a class="nav-link" href="@Url.Action("Quytrinhdaxacthuc", "KiemDinhs")"> <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>Quy trình đã ký</a>
                        <a class="nav-link" href="@Url.Action("Index", "KiemDinhs")"> <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>Tất cả quy trình</a>
                        <a class="nav-link" href="@Url.Action("Quytrinhbisuadoi", "KiemDinhs")"> <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>Quy trình bị sửa đổi</a>
                        <a class="nav-link" href="@Url.Action("TaoKhoa", "TaoMoiRSA")"> <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>Tạo chữ ký RSA</a>
                    </div>
                </div>

            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">

                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/Content/layoutAdmin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/layoutAdmin/assets/demo/chart-area-demo.js"></script>
    <script src="~/Content/layoutAdmin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/Content/layoutAdmin/js/datatables-simple-demo.js"></script>
</body>
</html>
