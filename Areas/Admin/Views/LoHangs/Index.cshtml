@model IEnumerable<Blockchain_Thuoc.Models.LoHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<main>
    <div class="container-fluid px-4">
        <h4 class="mt-5">Quản lý lô hàng</h4>

        <div class="card mb-4">
            <div class="card-header">
                @if (ViewBag.Msg != null)
                {
                    if (ViewBag.Msg == "1")
                    {
                        <div class="alert alert-success">
                            <strong>Thành công</strong>
                        </div>
                    }
                }
            <button type="button" class="btn btn-success">
                @Html.ActionLink("Thêm mới", "Create", new { }, new { @style = "color:white;" })
            </button>
            </div>

            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenLoHang)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NgaySanXuat)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GhiChu)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenLoHang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySanXuat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GhiChu)
                            </td>
                            <td style="width:160px !important">
                                <button class="btn btn-success mr-2">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoHang }, new { @style = "color:white;" })
                                </button>
                                <button class="btn btn-danger">
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoHang }, new { @style = "color:white;" })
                                </button>
                            </td>
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>

            CKEDITOR.replace("editor");

    </script>
    <script>
            var dodai = document.getElementById("dodai").value;

            for (var i = 1; i <= dodai; i++) {
                var name = "comment" + i
                CKEDITOR.replace(name);
            }
    </script>
</main>
